<!DOCTYPE html>
<html lang="en" style="height: 100%;">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ilustreteca - Início</title>
    
    <link rel="stylesheet" href="css/fichas.css">
    <script src="js/main.js" defer></script>
    <script src="https://kit.fontawesome.com/70fb3af43c.js" crossorigin="anonymous"></script>
</head>

<body id="body">
    
    <%- include('partials/nav_bar.ejs') %> 

    <div class="barra-filtragem">
        <form action="#" class="filtro-form">
            <select name="filter" id="filter" class="filter">
                <option value="" disabled hidden></option>
                
                <option value="">
                    <span>Sem filtro</span>
                </option>
                
                <option value="comunidade">
                    <span>Comunidade</span>
                </option>
                
                <option value="alunos">
                    <span>Alunos</span>
                </option>
                
                <option value="professores">
                    <span>Professores</span>
                </option>
            </select>
        </form>

        <div class="barra-pes">
            <input id="barra-pes" name="barra-pes" type="text" oninput="searchCards()">
            <i class="bi bi-search"></i>
        </div>
    </div>

    <div class="fichas-all">
        <div class="fichas-devolucao">
            <button>
                <i class="bi bi-caret-down-fill"></i>
                <div class="texto">
                    <i class="bi bi-calendar-week"></i>
                    <h2>DEVOLUÇÕES</h2>
                </div>
            </button>
    
            <div class="cards-box">
                <h4>Lorem ipsum dolor sit.</h4>
            </div>
        </div>
    
        <div class="fichas-atraso">
            <button>
                <i class="bi bi-caret-down-fill"></i>
                <i class="bi bi-clock-fill"></i>
                ATRASOS
            </button>
    
            <div class="cards-box">
                <h2>Lorem ipsum dolor sit.</h2>
            </div>
        </div>
    </div>

</body>
</html>
