<!DOCTYPE html>
<html lang="pt-BR" style="height: 100%;">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ilustreteca - Início</title>
    
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="css/index.css">
    <script src="js/main.js" defer></script>
</head>
<body id="body">
    <nav class="nav-bar">
        <div class="nav-opcoes">
            <button id="nav-button"><i class="bi bi-list"></i>OPÇÕES</button>
        </div>
        <div class="logo">
            <img src="./assets/images/logo/logo.png" alt="">
            <h1 class="titulo">ILUSTRETECA</h1>
        </div>
        <button class="theme-changer">
            <i class="bi bi-sun-fill"></i>
        </button>
    </nav>

    <div class="opt-buttons-div">
        <button onclick="navigate('fichas')" class="opt-buttons" id="nav-button1">Fichas</button>
        <!-- <button onclick="navigate('emprestimo')" class="opt-buttons" id="nav-button2">Empréstimos</button> -->
        <button onclick="navigate('livros')" class="opt-buttons" id="nav-button3">Livros</button>
        <button onclick="navigate('estatisticas')" class="opt-buttons" id="nav-button3">Estatísticas</button>
    </div>

    <section class="atalho">
        <div class="abas">
            <button class="adli">
                <h2>Adicionar Ficha</h2>
            </button>
            <button class="adfi">
                <h2>Adicionar Livro</h2>
            </button>
        </div>
        
        <div>
            <form action="#">
            <span style="color: black;">Nome:</span>
            <input type="text" placeholder="Exemplo: José Maria Escrivá" style="color:black">
            <span style="color: black;">Email:</span>
            <input type="text" placeholder="Exemplo@gmail.com" style="color:black">
            </form>
        </div>
    </section>
</body>
</html>
